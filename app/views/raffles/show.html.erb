<% if current_user != @raffle.user %>
  Owner: <%= link_to @raffle.user.username, user_raffles_path(@raffle.user) %>
  <br>
<% end %>

title: <%= @raffle.title %>
<br>
item: <%= @raffle.item %>
<br>
goal: <%= number_to_currency(@raffle.goal) %>
<br>
cost: <%= number_to_currency(@raffle.cost) %>
<br>
description: <%= @raffle.description %>
<br>

<% if current_user != @raffle.user && !@raffle.entered_users.include?(current_user) %>
  <%= button_to "Enter", enter_path(@raffle), method: :post%>
<% elsif @raffle.entered_users.include?(current_user) %>
  <input type="submit" value="Entered" disabled>
<% end %>

<%= link_to "edit", edit_raffle_path if current_user == @raffle.user %>